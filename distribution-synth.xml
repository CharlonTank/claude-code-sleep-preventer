<?xml version="1.0" encoding="utf-8"?>
<installer-gui-script minSpecVersion="1">
    <title>Claude Sleep Preventer</title>
    <organization>com.charlontank</organization>
    <pkg-ref id="com.charlontank.claude-sleep-preventer-cli"/>
    <pkg-ref id="com.charlontank.claude-sleep-preventer"/>
    <domains enable_localSystem="true"/>
    <options customize="never" require-scripts="true" hostArchitectures="x86_64,arm64" rootVolumeOnly="true"/>
    <choices-outline>
        <line choice="default">
            <line choice="com.charlontank.claude-sleep-preventer-cli"/>
            <line choice="com.charlontank.claude-sleep-preventer"/>
        </line>
    </choices-outline>
    <choice id="default"/>
    <choice id="com.charlontank.claude-sleep-preventer-cli" visible="false">
        <pkg-ref id="com.charlontank.claude-sleep-preventer-cli"/>
    </choice>
    <pkg-ref id="com.charlontank.claude-sleep-preventer-cli" version="2.1.4" onConclusion="none">ClaudeSleepPreventer-cli.pkg</pkg-ref>
    <choice id="com.charlontank.claude-sleep-preventer" visible="false">
        <pkg-ref id="com.charlontank.claude-sleep-preventer"/>
    </choice>
    <pkg-ref id="com.charlontank.claude-sleep-preventer" version="2.1.4" onConclusion="none">ClaudeSleepPreventer-app.pkg</pkg-ref>
</installer-gui-script>